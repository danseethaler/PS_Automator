{
    "name":"PeopleSoft Automator",
    "version":"0.0.1",
    "manifest_version":2,
    "description":"Automating PeopleSoft with Javascript.",
    "icons":{
        "16":"icons/icon16.png",
        "48":"icons/icon48.png"
    },
    "background":{
        "scripts":[
            "javascript/background.js"
        ]
    },
    "page_action":{
        "default_icon":"icons/icon19.png",
        "default_title":"PeopleSoft Automator",
        "default_popup":"page_action.html"
    },
    "options_ui":{
        "page":"options.html",
        "chrome_style":true
    },
    "permissions":[
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "https://hrcore91.ldschurch.org/*",
        "https://hrcore91-sg-stage.ldschurch.org/*",
        "https://hradmin91.ldschurch.org/*",
        "https://hradmin91-sg-stage.ldschurch.org/*",
        "activeTab",
        "tabs"
    ],
    "commands":{
        "openQueryManager":{
            "suggested_key":{
                "default":"Ctrl+Shift+Y",
                "mac":"Command+Shift+Y"
            },
            "description":"Open the Query Manager"
        },
        "_execute_page_action":{
            "suggested_key":{
                "default":"Ctrl+Shift+E",
                "windows":"Alt+Shift+P",
                "mac":"Alt+Shift+P"
            }
        }
    },
    "content_scripts":[
        {
            "matches":[
                "https://hrcore91.ldschurch.org/*",
                "https://hrcore91-sg-stage.ldschurch.org/*",
                "https://hradmin91.ldschurch.org/*",
                "https://hradmin91-sg-stage.ldschurch.org/*"
            ],
            "js":[
                "javascript/firstresponse.js",
                "javascript/pageready.js",
                "javascript/mutations.js",
                "javascript/functions.js"
            ]
        }
    ]
}
